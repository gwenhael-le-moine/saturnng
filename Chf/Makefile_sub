all: $(LIB)

$(LIB): $(OBJ)
	$(AR) $(ARFLAGS) $@ $?

test: $(TBIN)
	@for b in $(TBIN) ; do \
	  ./$$b ; \
	done

depend: $(SRC)
	@makedepend $(HPATH) $(SRC)
